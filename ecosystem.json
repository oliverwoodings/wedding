{
  "apps" : [{
    "name": "wedding",
    "script": "make migrate && npx jetpack start",
    "env_production": {
      "NODE_ENV": "production"
    }
  }],
  "deploy": {
    "production": {
      "user": "root",
      "host": "danniandoli.wedding",
      "ref": "origin/master",
      "repo": "git@github.com:oliverwoodings/wedding.git",
      "path": "/root/apps/wedding",
      "post-deploy" : "nvm use && yarn && npx jetpack build && npx pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
